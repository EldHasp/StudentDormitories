    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Border
                Grid.ColumnSpan="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Работа с комнатами" HorizontalAlignment="Center" />
                <TextBlock HorizontalAlignment="Center">
                    <Run Text="Общежития"/>
                    <Run Text="{Binding DormitorySelected.Title}"/>
                </TextBlock>
            </StackPanel>
        </Border>
        <Border Grid.Row="1" Grid.RowSpan="2" Margin="5" 
                Background="#FFFFE599" BorderBrush="#FFFF8000" BorderThickness="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                    <Run Text="Общий список комнат"/>
                </TextBlock>
                <ListBox 
                        Grid.Row="1" Margin="5"
                        DisplayMemberPath="Number"
                        ItemsSource="{Binding Rooms}"
                        SelectedItem="{Binding RoomSelected}" 
                        IsEnabled="{Binding AllFalseIsMode}">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="ToolTip">
                                <Setter.Value>
                                    <TextBlock>
                                            <Run Text="{Binding ID}" />
                                            <Run Text="{Binding Number}" />
                                            <Run Text="{Binding DormitoryID}" />
                                    </TextBlock>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Grid>
        </Border>
        <local:RoomEditUC Grid.Row="1" Grid.Column="1" Margin="5"
            Background="#FFFFE599" BorderBrush="#FFFF8000" BorderThickness="2"/>
        <Border Grid.Row="2" Grid.Column="1" Margin="5"
                Background="#FFFFE599" BorderBrush="#FFFF8000" BorderThickness="2">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
                <Button Command="{Binding RoomAddCommand, Mode=OneWay}" Content="Добавить"  Margin="5"/>
                <Button Margin="5"
                        Command="{Binding RoomEditCommand, Mode=OneWay}"
                        CommandParameter="{Binding RoomSelected}"
                        Content="Редактировать" />
                <Button Margin="5"
                        Command="{Binding RoomRemoveCommand}"
                        CommandParameter="{Binding RoomSelected}"
                        Content="Удалить" />
                <Button Margin="5"
                        Command="{Binding RoomSaveCommand}"
                        CommandParameter="{Binding RoomEdit}"
                        Content="Сохранить" />
                <Button Command="{Binding RoomCancelCommand}" Content="Отменить"  Margin="5"/>
            </StackPanel>
        </Border>
    </Grid>

</UserControl>
